<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutQ10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accentblue"
    tools:context=".fragments.Q10">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="18dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/lighttgold"
        app:layout_constraintGuide_begin="18dp" />

    <TextView
        android:id="@+id/q10"
        android:layout_width="342dp"
        android:layout_height="99dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/alegreya_sans"
        android:padding="10dp"
        android:text="@string/q10"
        android:textAlignment="center"
        android:textColor="@color/lighttgold"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup10"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <RadioGroup
        android:id="@+id/radioGroup10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/nextButton10"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/q10">

        <RadioButton
            android:id="@+id/q10a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans"
            android:text="Até R$ 1.000"
            android:textColor="@color/lighttgold"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/q10b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans"
            android:text="De R$ 1.001 até R$ 5.000"
            android:textColor="@color/lighttgold"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/q10c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans"
            android:text="De R$ 5.001 até R$ 10.000"
            android:textColor="@color/lighttgold"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/q10d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans"
            android:text="Acima de R$ 10.000"
            android:textColor="@color/lighttgold"
            android:textSize="30sp" />

    </RadioGroup>

    <Button
        android:id="@+id/nextButton10"
        android:layout_width="161dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/lightblue"
        android:fontFamily="@font/alegreya_sans"
        android:text="@string/next_button_label"
        android:textColor="@color/standartgold"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup10" />

</androidx.constraintlayout.widget.ConstraintLayout>